<link rel="stylesheet" href="/css/custom/web/auth.css" />
<div class="form">
  <%- include('../partials/message') %> <%-include('../partials/errore')%>
  <div class="main shadow-lg">
    <input type="checkbox" id="chk" aria-hidden="true" />
    <div class="signup">
      <form method="post" action="/auth/signup">
        <label for="chk" aria-hidden="true">ثبت نام</label>
        <div class="row">
          <div class="text-center">
            <input
              class="col-10 col-md-5 mx-3"
              type="text"
              name="firstName"
              placeholder="نام"
              value="<%-auth?.firstName %>"
              required=""
            />
            <input
              class="col-10 col-md-5 mx-3"
              type="text"
              name="lastName"
              placeholder="نام خانوادگی"
              value="<%-auth?.lastName %>"
              required=""
            />
          </div>
          <div class="text-center">
            <input
              class="col-10 col-md-5 mx-3"
              type="email"
              name="email"
              placeholder="ایمیل"
              value="<%-auth?.email %>"
              required=""
            />
            <input
              class="col-10 col-md-5 mx-3"
              type="tel"
              name="phone"
              placeholder="09"
              value="<%-auth?.phone %>"
              required=""
            />
          </div>
          <div class="text-center">
            <input
              class="col-10 col-md-5 mx-3"
              type="password"
              name="password"
              placeholder="رمز"
              required=""
            />
            <input
              class="col-10 col-md-5 mx-3"
              type="password"
              name="repeatPassword"
              placeholder="تکرار رمز"
              required=""
            />
          </div>
          <button type="submit">ثبت نام</button>
        </div>
      </form>
    </div>

    <div class="login">
      <form method="post" accept="/auth/login">
        <label for="chk" aria-hidden="true">ورود</label>
        <div class="text-center">
          <input type="email" name="email" placeholder="ایمیل" required="" />
          <input
            type="password"
            name="password"
            placeholder="رمز"
            required=""
          />
        </div>
        <button type="submit">ورود</button>
      </form>
    </div>
  </div>
</div>
