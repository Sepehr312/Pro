<style>
    .toast-container {
      z-index: 1055;
      top: 0;
      right: 0;
      left: auto;
      width: 100%; /* Full width for small screens */
    }
    .toast {
      font-size: 1.7rem; /* Larger font size */
      width: 100%; /* Ensures toast stays full-width on small screens */
    }
    @media (min-width: 768px) {
      .toast-container {
        width: 40%; /* One-third of the screen width for larger screens */
      }
    }
  </style>
</head>
<body>
  <% if (errors?.length > 0) { %>
    <div class="toast-container position-fixed p-3" id="errorToastContainer">
      <div id="errorToast" class="toast align-items-center text-bg-danger border-0" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="false">
        <div class="d-flex justify-content-between align-items-start">
          <button type="button" class="btn-close m-2" data-bs-dismiss="toast" aria-label="Close"></button> <!-- دکمه بستن به بالا منتقل شد -->
          <div class="toast-body rtl">
            <ul style="margin: 0; padding-left: 1.5rem; list-style-type: none;">
              <% errors.forEach(err => { %>
                <li>
                  <i class="bi bi-exclamation-triangle-fill" style="margin-left: 3px;"></i> <%= err.message %>
                </li>
              <% }) %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% } %>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      var toastElement = document.getElementById('errorToast');
      var errorToast = new bootstrap.Toast(toastElement, { autohide: false });
      errorToast.show();
    });
  </script>
