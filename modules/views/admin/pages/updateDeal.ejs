<style>
  @import url("https://fonts.googleapis.com/css2?family=Vazirmatn:wght@400;700&display=swap");

  body {
    background-color: #f0f2f5;
    font-family: "Vazirmatn", sans-serif;
  }

  .deal-of-the-day {
    background-color: #ffffff;
    border-radius: 10px;
    padding: 20px;
    margin: 20px 0;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .deal-of-the-day img {
    border-radius: 10px;
    max-height: 300px;
    object-fit: cover;
  }

  .form-label {
    font-weight: bold;
    color: #495057;
    display: inline-block;
    margin-bottom: 5px;
    text-align: right; /* Right-align the labels */
    width: 100%; /* Ensure labels take up full width */
  }

  .form-control {
    border-radius: 5px;
    text-align: right;
  }

  input[type="file"] {
    padding: 10px;
    text-align: right;
  }
</style>
<%-include('../partials/errore')%>
<div class="container">
  <form
    action="/admin/deal/updateddeal"
    method="post"
    enctype="multipart/form-data"
  >
    <div class="deal-of-the-day row g-4 align-items-start">
      <div class="col-md-4 text-center">
        <label for="imageInput" class="form-label">تصویر معامله</label>
        <img
          id="uploadedImage"
          src="/deal/<%-deal?.image%>"
          class="img-fluid mb-4"
          alt="تصویر معامله روز"
        />
        <input
          type="file"
          id="imageInput"
          name="newImage"
          class="form-control"
        />
      </div>
      <div class="col-md-8">
        <label for="dealTitle" class="form-label">عنوان معامله</label>
        <input
          type="text"
          id="dealTitle"
          name="title"
          placeholder="عنوان معامله"
          class="form-control mb-3"
          value="<%-deal?.title%>"
        />

        <label for="dealDescription" class="form-label">توضیحات معامله</label>
        <textarea
          id="dealDescription"
          name="description"
          rows="3"
          placeholder="توضیحات معامله"
          class="form-control mb-3"
        >
<%-deal?.description%></textarea
        >

        <div class="row g-3">
          <div class="col-6 col-sm-3">
            <label for="seconds" class="form-label">ثانیه</label>
            <input
              type="number"
              id="seconds"
              name="seconds"
              placeholder="0"
              class="form-control text-center"
              value="<%-deal?.seconds%>"
            />
          </div>
          <div class="col-6 col-sm-3">
            <label for="minutes" class="form-label">دقیقه</label>
            <input
              type="number"
              id="minutes"
              name="minutes"
              placeholder="0"
              class="form-control text-center"
              value="<%-deal?.minutes%>"
            />
          </div>
          <div class="col-6 col-sm-3">
            <label for="hours" class="form-label">ساعت</label>
            <input
              type="number"
              id="hours"
              name="hours"
              placeholder="0"
              class="form-control text-center"
              value="<%-deal?.hours%>"
            />
          </div>
          <div class="col-6 col-sm-3">
            <label for="days" class="form-label">روز</label>
            <input
              type="number"
              id="days"
              name="days"
              placeholder="0"
              class="form-control text-center"
              value="<%-deal?.days%>"
            />
          </div>
        </div>
        <div class="mt-2">
          <label for="btnURL" class="form-label">دکمه URL</label>
          <input
            type="text"
            id="btnURL"
            name="btnURL"
            placeholder="دکمه URL"
            class="form-control mb-3"
            value="<%-deal?.btnURL%>"
          />
        </div>
      </div>
    </div>
    <div class="d-grid gap-2">
      <input type="hidden" name="_id" value="<%= deal?._id %>" />
      <input type="hidden" name="lastImage" value="<%= deal?.image %>" />
      <button class="btn btn-success" type="submit">ذخیره</button>
    </div>
  </form>
</div>
