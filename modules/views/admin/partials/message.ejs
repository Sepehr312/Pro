<% if (message?.length > 0) { %>
  <div class="mt-5 alert alert-success alert-dismissible d-flex align-items-center justify-content-start" role="alert" style="direction: rtl;">
    <span class="ms-3">  <i class="bi bi-check-circle-fill me-2"></i></span>
    <span><%= message %></span>
    <button type="button" class="btn-close ms-3" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>
