          <a
            class="dropdown-item"
            href="/admin/information"
            data-tooltip="اطلاعات سایت"
            >اطلاعات</a
          >
        </li>
      </ul>
    </li>
  </ul>
</div>

<script>
 function toggleDropdown() {
  const settingsItems = document.getElementById("settingsItems");
  const toggleIcon = document.getElementById("toggleIcon");

  // بررسی وضعیت باز یا بسته بودن منو و تغییر آیکون
  settingsItems.classList.toggle("show");

  if (settingsItems.classList.contains("show")) {
    toggleIcon.classList.remove("bi-chevron-down");
    toggleIcon.classList.add("bi-chevron-up");
  } else {
    toggleIcon.classList.remove("bi-chevron-up");
    toggleIcon.classList.add("bi-chevron-down");
  }
}
  function toggleSidebar() {
    const sidebar = document.getElementById("sidebar");

    if (window.innerWidth <= 768) {
      sidebar.classList.toggle("show");
    } else {
      sidebar.classList.toggle("minimized");
    }
  }
</script>