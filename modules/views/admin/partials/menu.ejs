      <a class="nav-link" href="/admin/products" data-tooltip="محصولات">
        <span>محصولات</span><i class="bi bi-box icon-size"></i>
      </a>
    </li>
    <li class="nav-item dropdown" 
    onclick="toggleDropdown()">
      <a
        class="nav-link"
        href="#"
        id="settingsDropdown"
        role="button"
        data-tooltip="تنظیمات"
      >
        <span>تنظیمات</span>
        <i class="bi bi-gear icon-size"></i>
        <!-- آیکون برای باز و بسته کردن منو -->
        <i
          class="bi bi-chevron-down menu-toggle-icon"
          id="toggleIcon"
        ></i>
      </a>
      <ul id="settingsItems" class="dropdown-menu dropdown-menu-green">
        <li>
          <a class="dropdown-item" href="/admin/slider" data-tooltip="اسلایدر"
            >اسلایدر</a
