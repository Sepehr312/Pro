<% if (errors?.length > 0) { %>
  <div class="alert alert-danger alert-dismissible d-flex rtl align-items-start justify-content-start mt-2" role="alert" style="direction: rtl; flex-direction: column;">
    <ul style="margin: 0; padding-left: 1.5rem; list-style-type: none;">
      <% errors.forEach(err => { %>
        <li> <i class="bi bi-exclamation-triangle-fill" style="margin-left: 3px;"></i><%= err.message %></li>
      <% }) %>
    </ul>
    <button type="button" class="btn-close ms-3" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>
